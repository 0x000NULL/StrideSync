{
  "name": "stride-sync",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
    "start:api": "node apps/api/src/index.js",
    "dev:api": "nodemon apps/api/src/index.js",
    "start:web": "cd apps/web && npm start",
    "start:mobile": "cd apps/mobile && expo start",
    "start:desktop": "cd apps/desktop && electron .",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,jsx,json}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json}\"",
    "test": "jest",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.27.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^2.8.0",
    "jest": "^29.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "nodemon": "^2.0.20"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
